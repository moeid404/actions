global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['localhost:9093']

rule_files:
  - "rules.yml"

scrape_configs:

  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "prometheus-node"
    static_configs:
      - targets: ["{{ prometheus_server }}:9100"]

  - job_name: 'agen-node'
    static_configs:
      - targets: ['{{ agent }}:9100']

  - job_name: 'node-app'
    static_configs:
      - targets: ['{{ agent }}']
      
  - job_name: "cadvisor"
    static_configs:
      - targets: ["{{ agent }}:8080"]